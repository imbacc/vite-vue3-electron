{
	"compilerOptions": {
		"module": "esnext",
		"target": "esnext",
		"baseUrl": ".",
		"allowJs": true,
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": false,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": [
			"esnext",
			"es6",
			"dom"
		],
		"alwaysStrict": true,
		"declaration": true,
		"removeComments": true,
		"diagnostics": true,
		"incremental": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"noImplicitAny": true,
		"skipLibCheck": false,
		"tsBuildInfoFile": "./dist/.tscCache",
		"outDir": "dist",
		"types": [
			"@types/lodash-es",
			"vite/client"
		],
		"typeRoots": [
			"types",
			"node_modules/@types"
		],
		"paths": {
			"@/*": [
				"./src/*"
			],
			"#/*": [
				"./types/*"
			],
		}
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"types/**/*.d.ts",
		"vite-plugin/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"tests",
		".history"
	]
}